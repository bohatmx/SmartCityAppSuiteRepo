<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="@dimen/mon_padding">

    <!-- The List here-->
    <ListView
        android:id="@+id/NEWS_LIST_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:dividerHeight="@dimen/mon_padding" />

    <TextView
        android:id="@+id/NEWS_LIST_text"
        style="@style/Title1TextStyleGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_news" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mon_wide" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/mon_padding"
        android:src="@android:drawable/ic_dialog_map"
        app:backgroundTint="@color/red_800"
        app:borderWidth="0dp"
        app:elevation="@dimen/mon_margin"
        app:pressedTranslationZ="@dimen/mon_wide"
        app:rippleColor="@color/red_100" />

</RelativeLayout>
