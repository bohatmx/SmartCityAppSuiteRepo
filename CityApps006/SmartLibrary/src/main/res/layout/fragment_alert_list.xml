<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/mon_divider">


  <!--  <ImageView
        android:id="@+id/FAL_hero"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/back8"
        android:scaleType="centerCrop" /> -->

    <!-- The List here-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ALERT_LIST_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/mon_padding"
        app:layout_anchor="@id/fab"
        android:visibility="visible" />


    <TextView
        android:id="@+id/ALERT_LIST_text"
        style="@style/Title1TextStyleGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Current Alerts" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="@dimen/mon_divider"
        android:src="@android:drawable/ic_dialog_map"
        app:backgroundTint="@color/blue_600"
        app:borderWidth="0dp"
        android:visibility="gone"

        app:elevation="@dimen/mon_16"
        app:layout_anchor="@id/ALERT_LIST_listView"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="@dimen/mon_wide"
        app:rippleColor="@color/blue_200" />


</RelativeLayout>
