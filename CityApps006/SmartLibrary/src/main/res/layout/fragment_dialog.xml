<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/mon_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/FD_topLayout"
        android:padding="@dimen/mon_margin"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/FD_label"
            android:text="Multiple addresses have been found on the system for your complaint."
            android:layout_centerHorizontal="true"
            style="@style/TextStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Select Address"
            android:layout_marginTop="@dimen/mon_wide"
            android:layout_below="@id/FD_label"
            android:layout_centerHorizontal="true"
            style="@style/Title3TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/FD_list"
        android:layout_marginTop="@dimen/mon_margin"
        android:background="@color/white"
        android:dividerHeight="@dimen/mon_divider"
        android:layout_below="@id/FD_topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>