<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/mon_padding"
    android:layout_margin="@dimen/mon_margin"
    android:padding="@dimen/mon_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1"
        android:padding="@dimen/mon_divider"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/DASH_currBal"
            style="@style/Title0TextStyleBlue"
            android:layout_alignParentRight="true"
            android:text="0.00"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextStyle"
            android:layout_toLeftOf="@id/DASH_currBal"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mon_margin"
            android:text="Current Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:padding="@dimen/mon_divider"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1">


        <TextView
            android:id="@+id/DASH_arrears"
            style="@style/Title0TextStyleRed"
            android:layout_alignParentRight="true"
            android:text="0.00"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextStyle"
            android:layout_toLeftOf="@id/DASH_arrears"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mon_middle"
            android:text="Current Arrears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:padding="@dimen/mon_margin"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_marginTop="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2">


        <TextView
            android:id="@+id/DASH_complaintCount"
            style="@style/Title1TextStyleBlack"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextStyle"
            android:layout_toLeftOf="@id/DASH_complaintCount"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mon_margin"
            android:text="@string/my_complaints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout4"
        android:padding="@dimen/mon_divider"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3">


        <TextView
            android:id="@+id/DASH_resolvedCount"
            style="@style/Title1TextStyleGreen"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextStyle"
            android:layout_toLeftOf="@id/DASH_resolvedCount"
            android:layout_centerVertical="true"             
            android:layout_marginRight="@dimen/mon_margin"
            android:text="Resolved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout5"
        android:padding="@dimen/mon_divider"
        android:layout_marginRight="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4">


        <TextView
            android:id="@+id/DASH_accounts"
            style="@style/Title0TextStyleBlue"
            android:layout_alignParentRight="true"
            android:text="1"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            style="@style/TextStyle"
            android:layout_toLeftOf="@id/DASH_accounts"
            android:layout_centerVertical="true"             
            android:layout_marginRight="@dimen/mon_margin"
            android:text="My Accounts"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>