<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/MONTOAST_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/MONTOAST_banner"
            android:src="@drawable/banner2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="72dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/MONTOAST_top"
        android:padding="16dp"
        android:background="@color/beige_pale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/MONTOAST_text"
            style="@style/TextStyle"
            android:text="General message text happens here and things could be long in the tooth."
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <TextView
        android:id="@+id/MONTOAST_indicator"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        style="@style/BlueCircleSmall"
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>