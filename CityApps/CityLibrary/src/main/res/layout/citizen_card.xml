<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/card_view"
        android:padding="@dimen/mon_padding"
        android:layout_gravity="center"
        tools:cardCornerRadius="8dp">



        <RelativeLayout
            android:id="@+id/CITIZEN_topLayout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/CITIZEN_image"
                android:src="@drawable/black_woman"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mon_hero_height_large" />

            <TextView
                android:id="@+id/CITIZEN_name"
                style="@style/TextStyleBlue"
                android:text="Citizen Name"
                android:layout_below="@id/CITIZEN_image"
                android:padding="@dimen/mon_padding"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/CITIZEN_mLayout"
                android:layout_below="@id/CITIZEN_name"
                android:background="@color/white"
                android:padding="@dimen/mon_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CITIZEN_balance"
                    android:text="R5,785.89"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mon_margin"
                    style="@style/Title1TextStyleRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/CITIZEN_label1"
                    android:text="Balance"
                    style="@style/Title2TextStyleGrey"
                    android:layout_toLeftOf="@id/CITIZEN_balance"
                    android:layout_marginRight="@dimen/mon_margin"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>