<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.com.boha.monitor.library.activities.PictureRecyclerGridActivity">

    <RelativeLayout
        android:id="@+id/RCV_top"
        android:background="@color/white"
        android:padding="@dimen/mon_padding"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ALERT_LIST_km"
            android:layout_marginLeft="@dimen/mon_divider"
            android:text="50"
            style="@style/Title2TextStyleGreen"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/ALERT_LIST_seek"
            android:max="300"
            android:progress="100"
            android:layout_toRightOf="@id/ALERT_LIST_km"
            android:layout_marginLeft="@dimen/mon_padding"
            android:visibility="visible"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ALERT_LIST_refresh"
            android:src="@android:drawable/ic_menu_search"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mon_margin"
            android:tint="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ALERT_LIST_recyclerView"
        android:background="@color/white"
        android:layout_below="@id/RCV_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ALERT_LIST_count"
        style="@style/BlackCircle"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/mon_wider"
        android:elevation="@dimen/mon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
