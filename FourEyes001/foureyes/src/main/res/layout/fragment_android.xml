<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grey"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/ERR_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ERR_label"
            style="@style/TextStyleGrey"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Android Crash Reports"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ERR_count"
            style="@style/Title1TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="00"
            android:textStyle="bold" />

    </RelativeLayout>

    <ListView
        android:id="@+id/ERR_list"
        android:layout_below="@id/ERR_top"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        android:layout_height="match_parent"></ListView>
    <ImageView
        android:id="@+id/ERR_image"
        android:src="@drawable/happiness1"
        android:scaleType="centerCrop"
        android:layout_below="@id/ERR_top"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/ERR_msg"
        style="@style/Title2TextStyleWhite"
        android:text="No Android Crashes!"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

