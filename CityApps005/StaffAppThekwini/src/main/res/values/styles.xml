<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="StaffThemePink" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/pink_400</item>
        <item name="colorPrimaryDark">@color/pink_600</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="StaffThemeBlueGray" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue_gray_300</item>
        <item name="colorPrimaryDark">@color/blue_gray_500</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="StaffThemeBlue" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="StaffThemeIndigo" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/indigo_300</item>
        <item name="colorPrimaryDark">@color/indigo_500</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="StaffThemeTeal" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/teal_400</item>
        <item name="colorPrimaryDark">@color/teal_600</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="StaffThemeCyan" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/cyan_400</item>
        <item name="colorPrimaryDark">@color/cyan_700</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="StaffThemeOrange" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/orange_400</item>
        <item name="colorPrimaryDark">@color/orange_700</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/MyTheme.ActionBar.SubTitleTextStyle</item>
        <item name="android:background">@color/pink_700</item>
        <item name="subtitleTextStyle">@style/MyTheme.ActionBar.SubTitleTextStyle</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="StaffThemeRed" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="android:actionBarStyle">@style/actionBarStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <style name="MyTheme.ActionBar.SubTitleTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/absa_red</item>
    </style>



</resources>
