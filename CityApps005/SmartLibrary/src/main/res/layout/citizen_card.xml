<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CITIZEN_topLayout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:padding="@dimen/mon_padding"
        android:layout_gravity="center"
        tools:cardCornerRadius="16dp">


        <RelativeLayout
            android:id="@+id/CITIZEN_midLayout"
            android:background="@color/beige_pale"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/CITIZEN_image"
                android:src="@drawable/back8"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mon_hero_height_medium" />

            <TextView
                android:id="@+id/CITIZEN_title"
                style="@style/Title1TextStyleWhite"
                android:text="@string/my_accounts"
                android:layout_marginTop="@dimen/mon_margin"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/CITIZEN_name"
                style="@style/Title3TextStyleGrey"
                android:text="Citizen Name"
                android:layout_below="@id/CITIZEN_title"
                android:layout_alignLeft="@id/CITIZEN_title"
                android:layout_marginTop="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_below="@id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/CITIZEN_frame"
            android:layout_below="@id/CITIZEN_name"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/CITIZEN_acctsLayout"
                android:background="@color/white"
                android:padding="@dimen/mon_padding"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <include android:id="@+id/CITIZEN_btnLayout"
                    layout="@layout/red_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/CITIZEN_labela"
                    android:text="Accounts"
                    style="@style/Title2TextStyleGrey"
                    android:layout_toLeftOf="@id/CITIZEN_btnLayout"
                    android:layout_marginRight="@dimen/mon_wide"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CITIZEN_balanceLayout"
                android:layout_below="@id/CITIZEN_acctsLayout"
                android:background="@color/white"
                android:padding="@dimen/mon_padding"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CITIZEN_balance"
                    android:text="0.00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mon_margin"
                    style="@style/Title0TextStyleGreen"
                    android:elevation="@dimen/mon_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/CITIZEN_label1"
                    android:text="Current Balance"
                    style="@style/Title3TextStyleGrey"
                    android:layout_toLeftOf="@id/CITIZEN_balance"
                    android:layout_marginRight="@dimen/mon_padding"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CITIZEN_arrearsLayout"
                android:layout_below="@id/CITIZEN_balanceLayout"
                android:padding="@dimen/mon_margin"
                android:background="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CITIZEN_arrears"
                    android:text="0.00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mon_margin"
                    style="@style/Title0TextStyleRed"
                    android:elevation="@dimen/mon_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/CITIZEN_label1x"
                    android:text="Current Arrears"
                    style="@style/Title3TextStyleGrey"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/CITIZEN_arrears"
                    android:layout_marginRight="@dimen/mon_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CITIZEN_dateLayout"
                android:layout_below="@id/CITIZEN_arrearsLayout"
                android:padding="@dimen/mon_margin"
                android:background="@color/white"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/CITIZEN_nextBillDates"
                    android:text="23 February 2015"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/mon_margin"
                    style="@style/Title3TextStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/CITIZEN_label1z"
                    android:text="Next Bill Date"
                    style="@style/Title3TextStyleGrey"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/CITIZEN_nextBillDates"
                    android:layout_marginRight="@dimen/mon_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>

