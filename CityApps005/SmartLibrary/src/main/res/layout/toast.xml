<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey"
    android:padding="0.5dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/MONTOAST_top"
        android:background="@color/medium_sea_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mon_wider">

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/MONTOAST_top"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mon_hero_height_medium_lite"/>
    <TextView
        android:id="@+id/MONTOAST_text"
        style="@style/TextStyle"
        android:text="General message text happens here and things could be long in the tooth."
        android:layout_marginTop="@dimen/mon_widest"
        android:padding="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/MONTOAST_indicator"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        style="@style/BlackCircleSmall"
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>