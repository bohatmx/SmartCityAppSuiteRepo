<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/mon_divider_tiny"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        tools:cardCornerRadius="0dp"
        android:layout_width="600dp"
        android:layout_height="800dp">

        <RelativeLayout
            android:id="@+id/PHOTO_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/PHOTO_image"
                android:src="@drawable/under_construction"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/PHOTO_capLayout"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/mon_wide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/PHOTO_caption"
                    android:text="Photo caption here"
                    style="@style/TextStyleSmall"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:padding="@dimen/mon_padding"
                    android:layout_marginLeft="@dimen/mon_wider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/PHOTO_date"
                    android:text="Tuesday, December 2014"
                    style="@style/TextStyleBlueSmall"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:padding="@dimen/mon_padding"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/PHOTO_number"
            style="@style/RedCircleSmall"
            android:text="0"
            android:layout_margin="@dimen/mon_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.CardView>
</RelativeLayout>