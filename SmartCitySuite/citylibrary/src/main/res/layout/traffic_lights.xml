<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/TRAFF_main"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/TRAFF_top"
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TRAFF_grey"
            android:text="@string/alert_color"
            style="@style/Title3TextStyleBlack"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/TRAFF_top"
        android:padding="@dimen/mon_margin"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TRAFF_red"
                android:text="R"
                android:layout_marginLeft="@dimen/mon_wider"
                android:elevation="@dimen/mon_divider"
                android:background="@drawable/xred_oval"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TRAFF_yellow"
                android:text="Y"
                android:elevation="@dimen/mon_divider"
                android:background="@drawable/xorange_oval"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TRAFF_green"
                android:text="G"
                android:elevation="@dimen/mon_divider"

                android:background="@drawable/xgreen_oval"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>