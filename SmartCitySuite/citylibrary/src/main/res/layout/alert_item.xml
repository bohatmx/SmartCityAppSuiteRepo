<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/mon_divider"
    android:background="@color/grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:elevation="@dimen/mon_divider"
        android:padding="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/AI_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/AI_color"
                style="@style/BlueCircle"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/AI_type"
                style="@style/Title3TextStyleBlack"
                android:text="Alert Type"
                android:layout_toRightOf="@id/AI_color"
                android:layout_margin="@dimen/mon_margin"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/AI_desc"
            style="@style/TextStyleSmall"
            android:text="Description"
            android:layout_below="@id/AI_top"

            android:layout_marginLeft="64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@id/AI_desc"
            android:layout_marginTop="@dimen/mon_margin"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/AI_time"
                style="@style/Title2TextStyleBlue"
                android:text="10:26"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/AI_date"
                android:layout_toLeftOf="@id/AI_time"
                android:layout_centerVertical="true"
                style="@style/Title3TextStyleGrey"
                android:text="23 December 2091"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>