<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="@dimen/mon_divider">

    <include layout="@layout/top_template_royal_blue"
        android:id="@+id/ALERT_LIST_template"/>
    <RelativeLayout
        android:id="@+id/RCV_top"
        android:layout_below="@id/ALERT_LIST_template"
        android:background="@color/beige_pale"
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ALERT_LIST_km"
            android:layout_marginLeft="@dimen/mon_divider"
            android:text="100"
            style="@style/Title2TextStyleGreen"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/ALERT_LIST_seek"
            android:max="300"
            android:progress="100"
            android:layout_toRightOf="@id/ALERT_LIST_km"
            android:layout_marginLeft="@dimen/mon_padding"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ALERT_LIST_refresh"
            android:src="@android:drawable/ic_menu_search"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/mon_margin"
            android:tint="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ALERT_LIST_recyclerView"
        android:background="@color/white"
        android:layout_below="@id/RCV_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ALERT_LIST_count"
        style="@style/BlackCircleLarge"
        android:text="0"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/mon_wide"
        android:layout_marginTop="@dimen/mon_widest"
        android:layout_marginRight="@dimen/mon_margin"
        android:elevation="@dimen/mon_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
