<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey"
    android:padding="@dimen/mon_divider"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/CC_handle"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <include
        layout="@layout/top_template_purple"
        android:id="@+id/CC_top" />

    <RelativeLayout
        android:id="@+id/CC_middle"
        android:layout_below="@id/CC_top"
        android:background="@color/white"
        android:padding="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/CC_complaintType"
            style="@style/Title2TextStyleBlue"
            android:text="Select Complaint Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/CC_comment"
            android:layout_below="@id/CC_complaintType"
            android:layout_marginTop="@dimen/mon_margin"
            android:hint="Enter Details or Comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/CC_address"
            android:layout_below="@id/CC_comment"
            android:layout_marginTop="@dimen/mon_padding"
            android:hint="Enter Complaint Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/CC_btnSend"
            android:layout_below="@id/CC_address"
            android:layout_marginTop="@dimen/mon_divider"
            android:background="@color/absa_red"
            android:text="Send Complaint"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/CC_recyclerView"
        android:background="@color/white"
        android:layout_below="@id/CC_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/CC_noComplaintsLayout"
        android:layout_below="@id/CC_middle"
        android:gravity="center"
        android:background="@color/beige_pale"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/CC_noComplaints"
            style="@style/Title2TextStyleBlack"
            android:text="No Complaints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </RelativeLayout>

    <TextView
        android:id="@+id/CC_count"
        style="@style/BlackCountBox"
        android:text="0"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>