<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:background="@color/grey"
    tools:context="com.boha.citizenapp.activities.NavigationDrawerFragment" >

    <RelativeLayout
        android:id="@+id/NAV_topLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/NAV_title"
            android:text="TitleHere"
            android:padding="@dimen/mon_padding"
            style="@style/Title3TextStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/NAV_image"
            android:src="@drawable/banner4"
            android:scaleType="centerCrop"
            android:layout_below="@id/NAV_title"
            android:layout_width="match_parent"
            android:layout_height="120dp" />


        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NAV_subLayout"
        android:layout_below="@id/NAV_topLayout"
        android:background="@color/beige_pale"
        android:padding="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/NAV_subtitle"
            android:text="SubTitleHere"
            style="@style/Title3TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>

    <ListView android:id="@+id/NAV_list"
        android:layout_below="@id/NAV_subLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#cccc"
        tools:context="com.boha.citizenapp.activities.NavigationDrawerFragment" />



</RelativeLayout>

